{
  "manifest_version": 2,
  "name": "IONISxBetterVideo",
  "version": "1.1.2",
  "content_scripts": [
    {
      "matches": [
        "https://courses.ionisx.com/*",
        "https://ionisx.com/courses/*"
      ],
      "js": [
        "main.js"
      ]
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://www.youtube.com/*",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options.html"
  }
}